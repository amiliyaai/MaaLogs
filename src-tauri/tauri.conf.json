{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MaaLogs",
  "version": "0.9.7",
  "identifier": "com.administrator.maalogs",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MaaLogs",
        "width": 1280,
        "height": 800,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: blob:; connect-src 'self' https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; font-src 'self' data:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQzNkZCMzZDMEVFNjMwMTEKUldRUk1PWU9iTE52UTF2WVRQUlB0ZWhxc0t1bVZTZldXemx2a3FRRk1SWHNhSXJOZnQ4d2lIRzcK",
      "endpoints": ["https://github.com/amiliyaai/MaaLogs/releases/latest/download/latest.json"]
    }
  }
}
